<Window x:Name="mainWindow" x:Class="SecurityApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityApp"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800" Background="White" FontFamily="Tempus Sans ITC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Login:" FontSize="20" TextAlignment="Center"/>
            <TextBox Name="loginTextBox" Margin="0,0,0,5"/>
            <TextBlock Text="Password:" FontSize="20" TextAlignment="Center"/>
            <PasswordBox Name="passwordBox" Margin="0,0,0,10"/>
            <Button Name="signInButton" Content="Sign In" Click="SignInButtonClick" FontSize="20"/>
        </StackPanel>
        
    </Grid>
</Window>
